{
  "name": "rollup-plugin-dts-merger",
  "version": "1.2.4",
  "description": "A Rollup plugin for merging your hand written .d.ts files into the final output type file.",
  "description_zh": "这个rollup插件会把你所有手写的.d.ts文件合并到最终输出的类型文件",
  "purpose": "rollup-plugin",
  "type": "module",
  "projectType": "library",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "default": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "clear & vitest",
    "lint": "oxlint .",
    "cover": "clear & vitest --coverage",
    "build": "node ./scripts/rollup.mjs"
  },
  "keywords": [
    "rollup",
    "plugin",
    "typescript",
    "dts",
    "declaration",
    "merge"
  ],
  "author": {
    "name": "Kasukabe Tsumugi",
    "email": "futami16237@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baendlorel/rollup-plugin-dts-merger.git"
  },
  "bugs": {
    "url": "https://github.com/baendlorel/rollup-plugin-dts-merger/issues"
  },
  "homepage": "https://github.com/baendlorel/rollup-plugin-dts-merger#readme",
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "oxlint": "^1.11.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-dts-merger": "^1.2.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}